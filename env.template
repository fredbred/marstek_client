# Marstek Automation - Environment Variables Template
# Copy this file to .env and fill with your values

# Database
POSTGRES_USER=marstek
POSTGRES_PASSWORD=changeme
POSTGRES_DB=marstek_db
DATABASE_URL=postgresql+asyncpg://marstek:changeme@postgres:5432/marstek_db

# Redis
REDIS_URL=redis://redis:6379/0

# Application
APP_NAME=marstek-automation
APP_ENV=production
LOG_LEVEL=INFO
TIMEZONE=Europe/Paris

# Marstek Batteries
# Format: BATTERY_<ID>_IP, BATTERY_<ID>_PORT
BATTERY_1_IP=192.168.1.100
BATTERY_1_PORT=30001
BATTERY_2_IP=192.168.1.101
BATTERY_2_PORT=30002
BATTERY_3_IP=192.168.1.102
BATTERY_3_PORT=30003

# Scheduler
AUTO_MODE_START_HOUR=6
AUTO_MODE_END_HOUR=22
MANUAL_MODE_START_HOUR=22
MANUAL_MODE_END_HOUR=6

# Tempo RTE API
TEMPO_ENABLED=true
TEMPO_API_URL=https://www.api-rte.com/application/json
TEMPO_CONTRACT_NUMBER=
TEMPO_TIMEOUT=10

# Notifications (Apprise)
NOTIFICATIONS_ENABLED=true
# Format Apprise: telegram://<bot_token>@telegram/<chat_id>/
NOTIFICATION_URLS=

# Telegram (alternative to Apprise)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# RQ Worker
RQ_WORKER_QUEUE=default
RQ_WORKER_TIMEOUT=300

